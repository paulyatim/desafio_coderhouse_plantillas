<h2>Vista de Productos:</h2>
    <table style="font-size: 28px;" class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Icono</th>
            </tr>
        </thead>
        <tbody>
            {{#if productos}}
                {{#each productos}}
                    <tr>
                        <th scope="row">{{nombre}}</th>
                        <td>{{precio}}</td>
                        <td><img style="height: 40px;" src={{imagen}} alt="icon"></td>
                    </tr>
                {{/each}}
                {{else}}
                    <tr>
                        <th style="color: red;">No hay productos</th>
                    </tr>
            {{/if}}
        </tbody>
    </table>
    

