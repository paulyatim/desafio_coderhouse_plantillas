doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js')
    title Document
  body
    h1 Ingrese producto:
    form(action='/productos' method='post')
      div
        label(for='nombre') Nombre del producto
        input(type='text' placeholder='Nombre del producto' name='nombre')
      div
        label(for='precio') Precio del producto
        input(type='text' placeholder='Precio del producto' name='precio')
      div
        label(for='imagen') Imagen del producto
        input(type='text' placeholder='Foto URL' name='imagen')
      button(type='submit') Agregar
    div#vistaProductos
      each producto in productos
        h2 #{producto.nombre}
        h2 #{producto.precio}
        - var imgSrc = producto.imagen
        img(style='height: 40px;' src= imgSrc alt='icon')
      else
        h2 No hay productos
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')