doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js')
    title Document
  body(style='margin: 20px')
    h1 Ingrese producto:
    form(action='/productos' method='post')
      div(class="mb-3")
        label(class="form-label" for='nombre') Nombre del producto
        input(class="form-control" type='text' placeholder='Nombre del producto' name='nombre')
      div(class="mb-3")
        label(class="form-label" for='precio') Precio del producto
        input(class="form-control" type='text' placeholder='Precio del producto' name='precio')
      div(class="mb-3")
        label(class="form-label" for='imagen') Imagen del producto
        input(class="form-control" type='text' placeholder='Foto URL' name='imagen')
      button(class="btn btn-primary" type='submit') Agregar
    div#vistaProductos(style="margin-top: 40px;")
      h2 Vista de Productos:
        table(style="font-size: 28px;" class="table")
          thead
            tr
              th(scope="col") Nombre
              th(scope="col") Precio
              th(scope="col") Icono
          tbody
            each producto in productos
              tr
                th #{producto.nombre}
                td #{producto.precio}
                - var imgSrc = producto.imagen
                td
                  img(style='height: 40px;' src= imgSrc alt='icon')
            else
              tr
                th(style="color: red;") No hay productos
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')